<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Mixer.Base</AssemblyName>
    <RootNamespace>Mixer.Base</RootNamespace>
